<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_email_ed"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
        android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:hint="Email Id"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password_ed"
        app:layout_constraintTop_toBottomOf="@+id/register_email_ed"
        app:layout_constraintStart_toStartOf="@+id/register_email_ed"
        app:layout_constraintEnd_toEndOf="@+id/register_email_ed" android:layout_marginTop="24dp"
        android:hint="Password"/>
    <Button
        android:text="Register"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/register_btn"
        app:layout_constraintTop_toBottomOf="@+id/register_password_ed"
        app:layout_constraintStart_toStartOf="@+id/register_password_ed"
        app:layout_constraintEnd_toEndOf="@+id/register_password_ed" android:layout_marginTop="24dp"
        android:backgroundTint="@color/black"/>
    <Button
        android:text="Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/register_login_btn"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/register_btn"
        app:layout_constraintStart_toStartOf="@+id/register_btn"
        app:layout_constraintEnd_toEndOf="@+id/register_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>